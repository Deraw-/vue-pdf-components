{
	"name": "vue-pdf-components",
	"version": "0.1.0",
	"license": "MIT",
	"scripts": {
		"serve": "vue-cli-service serve ./demo/main",
		"build:demo": "vue-cli-service build ./demo/main",
		"build": "vue-cli-service build --target lib --name vue-pdf-components src/index.ts",
		"lint": "eslint ./ --ext .js,.ts,.vue --fix",
		"test:unit": "vue-cli-service test:unit"
	},
	"main": "dist/vue-pdf-components.umd.js",
	"browser": "dist/vue-pdf-components.common.js",
	"unpkg": "dist/vue-pdf-components.umd.min.js",
	"jsDelivr": "dist/vue-pdf-components.umd.min.js",
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"core-js": "^2.6.5",
		"intersection-observer": "^0.6.0",
		"pdfjs-dist": "^2.0.943",
		"vue": "^2.6.10",
		"vue-class-component": "^7.0.2",
		"vue-property-decorator": "^8.1.0"
	},
	"devDependencies": {
		"@types/jest": "^23.1.4",
		"@types/pdfjs-dist": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^1.7.0",
		"@typescript-eslint/parser": "^1.7.0",
		"@vue/cli-plugin-babel": "^3.6.0",
		"@vue/cli-plugin-eslint": "^3.3.0",
		"@vue/cli-plugin-typescript": "^3.3.0",
		"@vue/cli-plugin-unit-jest": "^3.3.0",
		"@vue/cli-service": "^3.3.0",
		"@vue/eslint-config-prettier": "^4.0.1",
		"@vue/eslint-config-typescript": "^4.0.0",
		"@vue/test-utils": "1.0.0-beta.29",
		"babel-core": "7.0.0-bridge.0",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"lint-staged": "^8.1.5",
		"node-sass": "^4.9.0",
		"sass-loader": "^7.1.0",
		"ts-jest": "^23.0.0",
		"typescript": "^3.4.3",
		"vue-template-compiler": "^2.5.21",
		"webpack": "^4.30.0"
	},
	"peerDependencies": {
		"vue": "^2.6.10"
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	],
	"jest": {
		"moduleFileExtensions": [
			"js",
			"jsx",
			"json",
			"vue",
			"ts",
			"tsx"
		],
		"transform": {
			"^.+\\.vue$": "vue-jest",
			".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
			"^.+\\.tsx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"/node_modules/"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"snapshotSerializers": [
			"jest-serializer-vue"
		],
		"testMatch": [
			"**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
		],
		"testURL": "http://localhost/",
		"watchPlugins": [
			"jest-watch-typeahead/filename",
			"jest-watch-typeahead/testname"
		],
		"globals": {
			"ts-jest": {
				"babelConfig": true
			}
		}
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"eslint ./ --ext .js,.ts,.vue --fix",
			"git add"
		]
	}
}
